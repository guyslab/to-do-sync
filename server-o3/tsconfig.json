{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
